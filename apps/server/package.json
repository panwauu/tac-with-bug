{
  "name": "@repo/server",
  "version": "0.0.0",
  "type": "commonjs",
  "engines": {
    "node": "22.x"
  },
  "description": "",
  "main": "server.js",
  "scripts": {
    "check-types": "tsc --noEmit",
    "start": "node ./dist/entrypoints/index.js",
    "start:dev": "cross-env NODE_ENV=development nodemon ./dist/entrypoints/index.js",
    "start:test": "cross-env NODE_ENV=test node ./dist/entrypoints/index.js --serve",
    "build-spec": "echo 'build started' && tsoa spec-and-routes && openapi --input ./src/swagger.json --output ../client/src/generatedClient --useUnionTypes && echo 'build ended'",
    "build-spec:watch": "onchange \"src/routes/*.controller.ts\" -e \"src/routes/routes.ts\" -i -k -- npm run build-spec",
    "tsc": "tsc",
    "tsc:watch": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:e2e": "playwright test --config=src/test/e2e/playwright.config.ts",
    "lint": "eslint ./src",
    "prettier:format": "prettier --config .prettierrc --write .",
    "check-format": "prettier --config .prettierrc --check .",
    "check-locale-files": "node ./dist/entrypoints/checkLocales.js ../../email/locales && node ./dist/entrypoints/checkLocales.js ../../../client/src/locales",
    "setup-test-database": "node ./dist/entrypoints/createTestDatabase.js",
    "build": "npm run build-spec && tsc",
    "dev": "run-p tsc:watch build-spec:watch start:dev"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@dicebear/collection": "^9.2.4",
    "@dicebear/core": "^9.2.4",
    "@repo/core": "*",
    "bcrypt": "^6.0.0",
    "cli-progress": "^3.12.0",
    "compression": "^1.8.0",
    "dotenv": "^17.2.0",
    "email-templates": "^12.0.2",
    "email-validator": "^2.0.4",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "heroku-ssl-redirect": "^0.1.1",
    "ical-generator": "^9.0.0",
    "joi": "^18.0.1",
    "json-stable-stringify": "^1.2.1",
    "jsonwebtoken": "^9.0.0",
    "lodash": "^4.17.21",
    "minimist": "^1.2.8",
    "multer": "^2.0.2",
    "neverthrow": "^8.2.0",
    "node-schedule": "^2.1.1",
    "nodemailer": "^7.0.5",
    "onchange": "^7.1.0",
    "pg": "^8.14.1",
    "preview-email": "^3.1.0",
    "pug": "^3.0.2",
    "sharp": "^0.34.1",
    "socket.io": "^4.6.1",
    "swagger-ui-express": "^5.0.1",
    "tsoa": "^6.6.0",
    "ua-parser-js": "^2.0.3",
    "vite": "^7.1.7",
    "winston": "^3.17.0",
    "winston-transport": "^4.9.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.51.1",
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "@types/bcrypt": "^6.0.0",
    "@types/chance": "^1.1.3",
    "@types/cli-progress": "^3.11.6",
    "@types/compression": "^1.7.2",
    "@types/email-templates": "^10.0.1",
    "@types/express": "^5.0.1",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/lodash": "^4.17.16",
    "@types/minimist": "^1.2.2",
    "@types/multer": "^2.0.0",
    "@types/node": "^22.14.1",
    "@types/node-schedule": "^2.1.7",
    "@types/nodemailer": "^6.4.17",
    "@types/pg": "^8.11.12",
    "@types/supertest": "^6.0.3",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/ua-parser-js": "^0.7.36",
    "@vitest/coverage-v8": "^3.1.1",
    "chance": "^1.1.12",
    "cross-env": "^10.0.0",
    "eslint": "^9.24.0",
    "nodemon": "^3.1.9",
    "npm-run-all": "^4.1.5",
    "openapi-typescript-codegen": "^0.29.0",
    "prettier": "^3.5.3",
    "socket.io-client": "^4.8.1",
    "supertest": "^7.1.0",
    "typescript": "^5.8.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "nodemonConfig": {
    "ignore": [
      "src/*",
      "coverage/*",
      "playwright-report/*",
      "public/*",
      "test-results/*"
    ],
    "delay": 200
  }
}
