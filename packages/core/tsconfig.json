{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@repo/typescript-config/server.json",

  "compilerOptions": {
    "target": "esnext",
    "module": "CommonJS",
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "types": ["vitest/globals"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/vitest.config.ts", "**/vite.config.ts", "**/*.test.ts"]
}
