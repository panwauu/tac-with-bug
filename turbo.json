{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "check-format": {
      "dependsOn": ["^check-format"]
    },
    "check-locale-files": {
      "dependsOn": ["^check-locale-files"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "server/public/**"]
    },
    "test": {
      "dependsOn": ["^test"]
    },
    "dev": {
      "persistent": true,
      "cache": false
    }
  }
}
