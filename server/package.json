{
  "name": "server",
  "version": "1.1.4",
  "engines": {
    "node": "16.x"
  },
  "description": "",
  "main": "server.js",
  "scripts": {
    "start": "node --es-module-specifier-resolution=node ./dist/entrypoints/index.js",
    "start:dev": "cross-env NODE_ENV=development nodemon --es-module-specifier-resolution=node ./dist/entrypoints/index.js",
    "start:test": "cross-env NODE_ENV=test node --es-module-specifier-resolution=node ./dist/entrypoints/index.js --serve",
    "build-spec": "echo 'build started' && tsoa spec-and-routes && openapi --input ./src/swagger.json --output ../client/src/generatedClient --useUnionTypes && echo 'build ended'",
    "build-spec:watch": "onchange \"src/routes/*.controller.ts\" -e \"src/routes/routes.ts\" -i -k -- npm run build:spec",
    "tsc": "tsc",
    "tsc:watch": "tsc --watch",
    "test": "jest --runInBand",
    "test:watch": "jest --watchAll --runInBand",
    "test:e2e": "playwright test --config=src/tests/playwright.config.ts",
    "lint": "eslint -c .eslintrc.js ./src",
    "prettier:format": "prettier --config .prettierrc --write .",
    "prettier:check": "prettier --config .prettierrc --check .",
    "check-locales": "node ./dist/entrypoints/checkLocales.js ../../email/locales && node ./dist/entrypoints/checkLocales.js ../../../client/src/locales",
    "sanitize-captures": "node ./dist/entrypoints/sanitizeCapture.js"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@dicebear/avatars": "^4.10.8",
    "@dicebear/avatars-bottts-sprites": "^4.10.8",
    "axios": "^0.25.0",
    "bcrypt": "^5.1.0",
    "cli-progress": "^3.10.0",
    "compression": "^1.7.4",
    "dotenv": "^10.0.0",
    "email-templates": "^8.0.8",
    "email-validator": "^2.0.4",
    "express": "^4.18.2",
    "helmet": "^4.6.0",
    "heroku-ssl-redirect": "^0.1.1",
    "ical-generator": "^1.15.4",
    "joi": "^17.7.0",
    "json-stable-stringify": "^1.0.2",
    "jsonwebtoken": "^9.0.0",
    "lodash": "^4.17.21",
    "minimist": "^1.2.7",
    "multer": "^1.4.5-lts.1",
    "neverthrow": "^6.0.0",
    "node-schedule": "^2.1.1",
    "nodemailer": "^6.7.2",
    "onchange": "^7.1.0",
    "pg": "^8.8.0",
    "pug": "^3.0.2",
    "sharp": "^0.30.7",
    "socket.io": "^4.5.4",
    "swagger-ui-express": "^4.6.0",
    "tsoa": "^4.1.3",
    "ua-parser-js": "^1.0.32",
    "uuid": "^8.3.2",
    "winston": "^3.8.2",
    "winston-transport": "^4.4.2"
  },
  "devDependencies": {
    "@babel/plugin-transform-modules-commonjs": "^7.20.11",
    "@playwright/test": "^1.29.2",
    "@types/bcrypt": "^5.0.0",
    "@types/chance": "^1.1.3",
    "@types/cli-progress": "^3.9.2",
    "@types/compression": "^1.7.2",
    "@types/email-templates": "^8.0.4",
    "@types/express": "^4.17.15",
    "@types/jest": "^29.2.6",
    "@types/json-stable-stringify": "^1.0.33",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/lodash": "^4.14.191",
    "@types/minimist": "^1.2.2",
    "@types/multer": "^1.4.7",
    "@types/node": "^16.18.11",
    "@types/node-schedule": "^2.1.0",
    "@types/nodemailer": "^6.4.4",
    "@types/pg": "^8.6.6",
    "@types/sharp": "^0.31.1",
    "@types/supertest": "^2.0.11",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/ua-parser-js": "^0.7.36",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.48.2",
    "@typescript-eslint/parser": "^5.48.2",
    "chance": "^1.1.9",
    "cross-env": "^7.0.3",
    "eslint": "^8.32.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-sonarjs": "^0.18.0",
    "jest": "^29.3.1",
    "nodemon": "^2.0.20",
    "openapi-typescript-codegen": "^0.23.0",
    "prettier": "^2.8.3",
    "socket.io-client": "^4.5.4",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.4"
  },
  "nodemonConfig": {
    "ignore": [
      "src/*",
      "coverage/*",
      "playwright-report/*",
      "public/*",
      "test-results/*"
    ],
    "delay": 200
  },
  "babel": {
    "env": {
      "test": {
        "plugins": [
          "@babel/plugin-transform-modules-commonjs"
        ]
      }
    }
  }
}
