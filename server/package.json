{
  "name": "server",
  "version": "1.4.1",
  "engines": {
    "node": "18.x"
  },
  "description": "",
  "main": "server.js",
  "scripts": {
    "start": "node ./dist/entrypoints/index.js",
    "start:dev": "cross-env NODE_ENV=development nodemon ./dist/entrypoints/index.js",
    "start:test": "cross-env NODE_ENV=test node ./dist/entrypoints/index.js --serve",
    "build-spec": "echo 'build started' && tsoa spec-and-routes && openapi --input ./src/swagger.json --output ../client/src/generatedClient --useUnionTypes && echo 'build ended'",
    "build-spec:watch": "onchange \"src/routes/*.controller.ts\" -e \"src/routes/routes.ts\" -i -k -- npm run build-spec",
    "tsc": "tsc",
    "tsc:watch": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:e2e": "playwright test --config=src/test/e2e/playwright.config.ts",
    "lint": "eslint -c .eslintrc.js ./src",
    "prettier:format": "prettier --config .prettierrc --write .",
    "prettier:check": "prettier --config .prettierrc --check .",
    "check-locales": "node ./dist/entrypoints/checkLocales.js ../../email/locales && node ./dist/entrypoints/checkLocales.js ../../../client/src/locales",
    "sanitize-captures": "node ./dist/entrypoints/sanitizeCapture.js",
    "setup-test-database": "node ./dist/entrypoints/createTestDatabase.js"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@dicebear/avatars": "^4.10.8",
    "@dicebear/avatars-bottts-sprites": "^4.10.8",
    "axios": "^0.25.0",
    "bcrypt": "^5.1.0",
    "cli-progress": "^3.12.0",
    "compression": "^1.7.4",
    "dotenv": "^16.0.3",
    "email-templates": "^11.0.5",
    "email-validator": "^2.0.4",
    "express": "^4.18.2",
    "helmet": "^4.6.0",
    "heroku-ssl-redirect": "^0.1.1",
    "ical-generator": "^1.15.4",
    "joi": "^17.9.2",
    "json-stable-stringify": "^1.0.2",
    "jsonwebtoken": "^9.0.0",
    "lodash": "^4.17.21",
    "minimist": "^1.2.8",
    "multer": "^1.4.5-lts.1",
    "neverthrow": "^6.0.0",
    "node-schedule": "^2.1.1",
    "nodemailer": "^6.9.2",
    "onchange": "^7.1.0",
    "pg": "^8.11.0",
    "pug": "^3.0.2",
    "sharp": "^0.32.1",
    "socket.io": "^4.6.1",
    "swagger-ui-express": "^4.6.3",
    "tsoa": "^5.1.1",
    "ua-parser-js": "^1.0.35",
    "winston": "^3.8.2",
    "winston-transport": "^4.4.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.34.3",
    "@types/bcrypt": "^5.0.0",
    "@types/chance": "^1.1.3",
    "@types/cli-progress": "^3.9.2",
    "@types/compression": "^1.7.2",
    "@types/email-templates": "^10.0.1",
    "@types/express": "^4.17.17",
    "@types/json-stable-stringify": "^1.0.33",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/lodash": "^4.14.195",
    "@types/minimist": "^1.2.2",
    "@types/multer": "^1.4.7",
    "@types/node": "^18.16.15",
    "@types/node-schedule": "^2.1.0",
    "@types/nodemailer": "^6.4.8",
    "@types/pg": "^8.10.1",
    "@types/supertest": "^2.0.11",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/ua-parser-js": "^0.7.36",
    "@typescript-eslint/eslint-plugin": "^5.59.7",
    "@typescript-eslint/parser": "^5.59.7",
    "@vitest/coverage-c8": "^0.33.0",
    "chance": "^1.1.11",
    "cross-env": "^7.0.3",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-sonarjs": "^0.19.0",
    "nodemon": "^3.0.1",
    "openapi-typescript-codegen": "^0.25.0",
    "prettier": "^3.0.0",
    "socket.io-client": "^4.6.1",
    "supertest": "^6.3.3",
    "typescript": "^5.0.4",
    "vitest": "^0.33.0"
  },
  "nodemonConfig": {
    "ignore": [
      "src/*",
      "coverage/*",
      "playwright-report/*",
      "public/*",
      "test-results/*"
    ],
    "delay": 200
  }
}
